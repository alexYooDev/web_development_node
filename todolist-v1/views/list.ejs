<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body>
    <div class="box">
      <h1 id="heading"><%= today %></h1>
    </div>
    <div class="box">
      <% items.forEach((item) => { %>
      <ul class="item">
        <input type="checkbox" />
        <li><%= item.name %></li>
        <form action="/delete" method="post">
          <button
            class="delete-btn"
            type="submit"
            name="deleteItem"
            value="<%= item %>"
          >
            -
          </button>
        </form>
      </ul>
      <% }); %>
      <form class="item" action="/add" method="post">
        <input
          type="text"
          name="newItem"
          id="new-item"
          placeholder="enter a new item"
          autocomplete="off"
        />
        <button type="submit">+</button>
      </form>
    </div>
    <%- include('footer') %>
  </body>
</html>
